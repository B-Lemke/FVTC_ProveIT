@model MB.AgilePortfolio.MVCUI.ViewModels.PortfolioProjectViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PortfolioProject</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.PortfolioProject.PortfolioId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PortfolioProject.PortfolioId, new SelectList(Model.Portfolios, "Id", "Name", Model.PortfolioProject), null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PortfolioProject.PortfolioId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PortfolioProject.ProjectId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PortfolioProject.ProjectId, new SelectList(Model.Projects, "Id", "Name", Model.PortfolioProject), null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PortfolioProject.ProjectId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
