@model MB.AgilePortfolio.MVCUI.ViewModels.UserProfile 

@{
    ViewBag.Title = "EditProjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Projects</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 align="center">Projects</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @foreach (var prj in Model.Projects)
            {
                <div class="form-group" align="center">
                    <div class="col-md-10">
                        @Html.ActionLink(
                       prj.Name,
                       "EditProject",
                       "UserProfile",
                       new { id = prj.Id },
                       new { @class = "btn btn-primary"}
                       )
                        @Html.ValidationMessageFor(model => prj.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            }
        </div>
    </div>
}

    <div align="center">
        @Html.ActionLink("Create New Project", "Create","CreateNewProject")
    </div>

<div>
    @Html.ActionLink("Back to Profile", "EditProfile")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
