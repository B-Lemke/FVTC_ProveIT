@model MB.AgilePortfolio.MVCUI.ViewModels.UserProfile

@{
    /**/

    ViewBag.Title = "Project Deleted";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal border-dark">
        <h2 class="text-center text-secondary m-5" style="font-size: 3em"> <i class="fa fa-minus-circle" aria-hidden="true"></i> Project has been Deleted <i class="fa fa-minus-circle" aria-hidden="true"></i></h2>

    </div>

}


<div class="text-center">
    @Html.ActionLink("Back to Projects", "EditProjects", null, new { @class = "btn btn-secondary border-dark" })
</div>

<script>
    window.setTimeout(function () {

        // Move to a new location or you can do something else
        window.location.href = "/UserProfile/EditProjects";

    }, 5000);

</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
