@model MB.AgilePortfolio.MVCUI.ViewModels.UserProfile

@{
    ViewBag.Title = "EditPortfolios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Portfolios</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 align="center">Portfolios</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @if (Model.Portfolios.Count < 1)
        {
            <p align="center" style="font-style:italic">You have no portfolios currently</p>
        }
        else
        {
            foreach (var portfolio in Model.Portfolios.OrderBy(i => i.Name))
            {
                <div class="form-group" align="center">
                    <div class="col-md-10">
                        @Html.ActionLink(
                       portfolio.Name,
                       "EditPortfolio",
                       "UserProfile",
                       new { id = portfolio.Id },
                       new { @class = "btn btn-primary"}
                       )
                        @Html.ValidationMessageFor(model => portfolio.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            }
        }


    </div>

    <div align="center">
        @Html.ActionLink("Create New Portfolio", "Create", "CreateNewPortfolio")
    </div>

    <div>
        @Html.ActionLink("Back to Profile", "EditProfile")
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
