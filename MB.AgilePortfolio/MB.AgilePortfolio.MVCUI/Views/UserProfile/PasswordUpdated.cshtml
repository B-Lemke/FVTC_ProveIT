@model MB.AgilePortfolio.MVCUI.ViewModels.UserProfile

@{
    /**/

    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Change Password</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 style="text-align:center; color:red;">Password has been updated</h2>

    </div>

    <div class="form-horizontal">
        <h3 style="text-align:center;">You have been logged out</h3>

    </div>

}


<div>
    @Html.ActionLink("Return to Login", "Index", "Login")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
